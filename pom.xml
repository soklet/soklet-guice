<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.soklet</groupId>
	<artifactId>soklet-guice</artifactId>
	<version>0.1.0-SNAPSHOT</version>
	<packaging>jar</packaging>
	<name>Soklet Guice</name>
	<description>Guice integration for Soklet, a minimalist infrastructure for Java webapps and microservices.</description>
	<url>http://soklet.com</url>

	<licenses>
		<license>
			<name>The Apache License, Version 2.0</name>
			<url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
		</license>
	</licenses>

	<developers>
		<developer>
			<name>Mark Allen</name>
			<email>maa@xmog.com</email>
			<organization>Transmogrify, LLC.</organization>
			<organizationUrl>http://www.xmog.com</organizationUrl>
		</developer>
	</developers>

	<scm>
		<connection>scm:git:git@github.com:soklet/soklet-guice.git</connection>
		<developerConnection>scm:git:git@github.com:soklet/soklet-guice.git</developerConnection>
		<url>git@github.com:soklet/soklet-guice.git</url>
	</scm>


	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.2</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<version>2.10.2</version>
				<configuration>
					<links>
						<link>https://docs.oracle.com/javase/8/docs/api/</link>
						<link>http://docs.oracle.com/javaee/7/api/</link>
						<link>http://google.github.io/guice/api-docs/latest/javadoc/</link>
					</links>
					<show>public</show>
					<failOnError>true</failOnError>
					<linksource>true</linksource>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<dependencies>
		<!-- Hard dependencies -->
		<dependency>
			<groupId>com.soklet</groupId>
			<artifactId>soklet</artifactId>
			<version>0.1.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>com.google.inject</groupId>
			<artifactId>guice</artifactId>
			<version>4.0-beta5</version>
		</dependency>

		<!-- Test dependencies -->
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.11</version>
			<scope>test</scope>
		</dependency>
	</dependencies>
</project>